 @model IEnumerable<Bsnsapp.Models.Category>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Category</title>
</head>
<h2>Category List</h2>
<body>
   @*<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@
        <table style=" width:50%; font-size:12px; float:left;" >
        <tr style=" border-bottom: 1px solid black ">
            <th></th>
            <th>
                Category
            </th>
            <th>
                Sub Category
            </th>
             
        </tr>
    
    @foreach (var item in Model)
    {
        <tr style=" border-bottom: 1px solid black ">
            <td>
                @Html.ActionLink("Edit", "EditCat", new { id = item.Id }) |
                @Html.ActionLink("Details", "DetailsCat", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteCat", new { id = item.Id })  |
            </td>
            <td align="center">
                @item.Categories
            </td>
            <td align="center">
                @item.Sub_Categories
            </td>
                 </tr>
    }
    
    </table>   
   
</body>
</html>




@model Bsnsapp.Models.LoginPage

@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title><span lang="en">Login</span></title>
   
</head>
<body>  
    
    @using (Html.BeginForm("content"))
    {
        <center style=" color:Red; font-style:italic; font-weight:bold;">
        @Html.ValidationSummary(true, "Login was unsuccessful. Please enter valid account details and try again!...........")
      </center>
        <fieldset>
            <legend><span lang="en">Login Page</span></legend>
    
            <div class="editor-label">
               <span lang="en">Email :</span> 
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserID)
                @Html.ValidationMessageFor(model => model.UserID)
            </div>
    
            <div class="editor-label">
               <span lang="en">Password :</span>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
    
            <p>
                <input type="submit" value="Submit"  lang="en"/>
            </p>
        </fieldset>
    }
    
    @*<div>
        @Html.ActionLink("Back to List","Index", "Home")
    </div>*@
</body>
</html>
